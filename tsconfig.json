{
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@/*": ["src"]
      },
      "strictNullChecks": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "jsx": "preserve",
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "target": "es6",
      "lib": ["dom", "es2017"],
      "skipLibCheck": true,
      "allowJs": true
    },
    "exclude": ["node_modules", "dist"]
  }
  